<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WalletActivity"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/tv_astrology"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:text="Color Prediction Game"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <!--            <ImageView-->
            <!--                android:id="@+id/iv_settings"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:src="@drawable/baseline_notifications_none_24" />-->


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ssb"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="My Account"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:backgroundTint="@color/yellow">


                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_profileImage1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/man"
                                app:civ_border_color="@android:color/white"
                                app:civ_border_width="1dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="User Name"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    Ajit"
                                    android:textSize="15sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="ID"
                                    android:textSize="15sp" />

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    2366345636"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="Mobile number"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvPhone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    9555774646"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="Available balance"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tvbalance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    56576"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvAddMoney"
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="10dp"
                                    android:background="@drawable/ssa"
                                    android:backgroundTint="@color/green"
                                    android:gravity="center"
                                    android:text="Add money"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"
                                    tools:ignore="DuplicateIds" />


                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="10dp"
                                    android:background="@drawable/ssa"
                                    android:backgroundTint="@android:color/holo_blue_bright"
                                    android:gravity="center"
                                    android:text="Notification"
                                    android:textColor="@color/white"
                                    android:textSize="15dp" />


                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ssb"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="Details"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/action_invite"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Invite"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/action_wallet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Wallet"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/action_addmoney"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="Add money"
                android:textColor="@color/design_default_color_secondary_variant"
                android:textSize="18dp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/action_withdrawal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Withdrawal"

                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/action_transaction"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Transactions"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/action_changepassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Change password"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/action_bankaccount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Bank account"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Customert support"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:gravity="center"
                android:text="Download app"
                android:textColor="@color/white"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/action_logout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ssa"
                android:backgroundTint="@color/design_default_color_error"
                android:gravity="center"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="18dp" />



        </LinearLayout>


    </ScrollView>
</LinearLayout>

