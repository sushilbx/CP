<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_purple"
            android:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">

            <TextView
                android:id="@+id/tv_astrology"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"


                android:text="10"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


            <!--            <ImageView-->
            <!--                android:id="@+id/iv_settings"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="end"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:src="@drawable/baseline_notifications_none_24" />-->



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contract Money"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:textStyle="bold"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"

            android:gravity="center"
            android:textColor="@color/black"
            android:text="2"
            android:backgroundTint="@color/material_dynamic_neutral80"/>


        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="10"
            android:backgroundTint="@color/material_dynamic_neutral80"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="100"
            android:backgroundTint="@color/material_dynamic_neutral80"/>


        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="1000"
            android:backgroundTint="@color/material_dynamic_neutral80"/>



        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="10000"
            android:backgroundTint="@color/material_dynamic_neutral80"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/decrement"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="-"
            android:backgroundTint="@color/material_dynamic_neutral80"/>


        <TextView
            android:id="@+id/tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="1"
            android:backgroundTint="@color/material_dynamic_neutral80"/>


        <Button
            android:id="@+id/increment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ssa"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:onClick="incrementScore"
            android:text="+"
            android:backgroundTint="@color/material_dynamic_neutral80"/>








    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total contract money is: 2"
        android:textSize="15dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I Agree"/>

        <TextView
            android:id="@+id/pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRESALE RULE"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:layout_marginStart="20dp"
            android:background="@drawable/ssa"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="200dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/ssa" />


        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/ssa" />


    </LinearLayout>


</LinearLayout>