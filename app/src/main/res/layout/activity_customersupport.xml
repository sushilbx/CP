<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_astrology"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Color Prediction Game"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>



            <!--            <ImageView-->
<!--                android:id="@+id/iv_settings"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="end"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:src="@drawable/baseline_notifications_none_24" />-->



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="My Account"
                android:gravity="center"
                android:textSize="20dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/ssb"
                android:textColor="@color/white"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:backgroundTint="@color/yellow">




                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_profileImage1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/man"
                                app:civ_border_color="@android:color/white"
                                app:civ_border_width="1dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="User Name"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textView_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    Ajit"
                                    android:textSize="15sp" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="ID"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textView_id"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    2366345636"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="Mobile number"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textView_mobile"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    9555774646"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text="Available balance"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textView_availablebalance"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="start"
                                    android:text=":    56576"
                                    android:textSize="15dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/action_addmoney"
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="10dp"
                                    android:background="@drawable/ssa"
                                    android:backgroundTint="@color/green"
                                    android:gravity="center"
                                    android:text="Add money"
                                    android:textColor="@color/white"
                                    android:textSize="15dp" />



                                <TextView
                                    android:id="@+id/notification"
                                    android:layout_width="120dp"
                                    android:layout_height="30dp"
                                    android:text="Notification"
                                    android:gravity="center"
                                    android:textSize="15dp"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="10dp"
                                    android:backgroundTint="@android:color/holo_blue_bright"
                                    android:background="@drawable/ssa"/>



                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>



            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Details"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="18dp"

                android:backgroundTint="@color/black"
                android:background="@drawable/ssa"
                android:textColor="@color/white"/>



            <TextView
                android:id="@+id/action_invite"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Invite"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"

                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:background="@drawable/ssa"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/action_wallet"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Wallet"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:background="@drawable/ssb"
                android:textColor="@color/white"/>





            <TextView
                android:id="@+id/action_changepassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Change password"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:background="@drawable/ssa"
                android:textColor="@color/white"/>




            <TextView
                android:id="@+id/action_bankaccount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Bank account"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:background="@drawable/ssa"
                android:textColor="@color/white"/>



            <TextView
                android:visibility="gone"
                android:id="@+id/action_customerSupport"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Customert support"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:background="@drawable/ssa"
                android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Whatsapp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="150dp"
                android:textSize="18dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ssa"
                android:textColor="@color/design_default_color_secondary_variant"/>


       <ImageView
           android:id="@+id/whatsapp"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_marginTop="20dp"
           android:layout_marginStart="50dp"
           android:src="@drawable/whatsapp"/>



    </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="Telegram"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="150dp"
                android:textSize="18dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ssa"
                android:textColor="@color/design_default_color_secondary_variant"/>




            <ImageView
                android:id="@+id/telegram"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="50dp"
                android:src="@drawable/telegram"/>

        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Download app"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/design_default_color_secondary_variant"
                android:background="@drawable/ssa"
                android:textColor="@color/white"/>




            <TextView
                android:id="@+id/action_logout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Logout"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:backgroundTint="@color/design_default_color_error"
                android:background="@drawable/ssa"
                android:textColor="@color/white"/>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/black">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:drawableTint="@color/white"
                        android:id="@+id/action_home"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_home_24"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="Home"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <TextView
                        android:drawableTint="@color/white"
                        android:id="@+id/action_win"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_home_24"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="Win"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                    <TextView
                        android:drawableTint="@color/white"
                        android:id="@+id/action_Profile"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_person_24"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="Profile"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />




                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>
</LinearLayout>

