<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black"
            android:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_astrology"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Color Prediction Game"
                    android:backgroundTint="@color/black"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:backgroundTint="@color/yellow">




        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available balance"
            android:gravity="center"
            android:layout_gravity="center" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addmoney"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Add money"

                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/green"
                    android:background="@drawable/ssa"/>



                <TextView
                    android:id="@+id/readrules"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:text="Read rules"
                    android:gravity="center"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/design_default_color_error"
                    android:background="@drawable/ssa"/>



            </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Platform1"
        android:gravity="center"

        android:backgroundTint="@color/black"
        android:background="@drawable/ssb"
        android:textColor="@color/white"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Period"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count down"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/green"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="Green"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginStart="25dp"
                    android:backgroundTint="@color/green"
                    android:background="@drawable/ssa"/>



                <TextView
                    android:id="@+id/violet"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="Violet"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/violet"
                    android:background="@drawable/ssa"/>


                <TextView
                    android:id="@+id/red"
                    android:layout_width="80dp"
                    android:layout_height="45dp"
                    android:text="Red"
                    android:padding="10dp"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/design_default_color_error"
                    android:background="@drawable/ssa"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="0"
                    android:backgroundTint="@color/green"/>


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="1"
                    android:backgroundTint="@color/design_default_color_error"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="2"
                    android:backgroundTint="@color/green"/>


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="3"
                    android:backgroundTint="@color/green"/>



                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="4"
                    android:backgroundTint="@color/violet"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="5"
                    android:backgroundTint="@color/design_default_color_error"/>


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="6"
                    android:backgroundTint="@color/green"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="7"
                    android:backgroundTint="@color/green"/>


                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="8"
                    android:backgroundTint="@color/violet"/>



                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ssa"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="9"
                    android:backgroundTint="@color/violet"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Platform1 Records"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/ssa"
        android:textColor="@color/white"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="200dp">



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Period"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginStart="35dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginStart="35dp"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginStart="35dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginStart="35dp"/>








                </LinearLayout>

            </HorizontalScrollView>

        </androidx.cardview.widget.CardView>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="My Platform Records"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/ssa"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ssa"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:drawableTint="@color/white"
                    android:id="@+id/action_home"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/baseline_home_24"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Home"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <TextView
                    android:drawableTint="@color/white"
                    android:id="@+id/action_win"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/baseline_home_24"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Win"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


                <TextView
                    android:drawableTint="@color/white"
                    android:id="@+id/action_Profile"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/baseline_person_24"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />




            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
</LinearLayout>